{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types/", "./typings/"]
  },
  "include": ["./test/**/*"],
  "exclude": ["node_modules"]
}
