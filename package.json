{
  "name": "mco-server",
  "version": "1.3.0",
  "description": "a server",
  "main": "src/server.js",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "docker": "docker-compose up -d",
    "start": "npm run docker && nodemon",
    "test": "npm run lint-test",
    "lint-test": "tslint '{lib,src}/**/*.{ts,tsx}' && jest --all",
    "licence-check": "nlf > ./data/licenses.txt"
  },
  "author": "Joe Becher <jwbecher@drazisil.com> (drazisil.com)",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "engines": {
    "node": ">=8.12.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js|ts}",
      "lib/**/*.{js|ts}"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "jest-junit": {
    "output": "test-reports/junit.xml"
  },
  "dependencies": {
    "@types/dotenv-safe": "^5.0.1",
    "@types/js-yaml": "^3.11.2",
    "@types/node": "11.9.0",
    "@types/pg": "^7.4.11",
    "async": "^2.6.1",
    "dotenv-safe": "^6.0.0",
    "js-yaml": "^3.12.0",
    "pg": "^7.4.3",
    "source-map-loader": "^0.2.4",
    "ssl-config": "^1.0.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "jest": "^24.3.1",
    "jest-junit": "^6.0.1",
    "lint-staged": "^8.0.3",
    "nlf": "^2.0.1",
    "nodemon": "^1.18.9",
    "pg-migrator": "^1.0.5",
    "prettier": "^1.14.3",
    "prettier-eslint": "^8.8.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3",
    "typescript-eslint-parser": "^22.0.0"
  },
  "prettier": {
    "trailingComma": "es5"
  }
}
