{
  "name": "mco-server",
  "version": "3.0.0-beta1",
  "description": "a server",
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node app.js",
    "test": "npm run lint-test",
    "lint": "xo --fix",
    "lint-test": "npm run lint && npm run test:only",
    "test:only": "node --trace-warnings --experimental-vm-modules node_modules/.bin/jest --detectOpenHandles",
    "precommit": "npm run lint-test",
    "postinstall": "mkdir -p db"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "dependencies": {
    "@drazisil/mco-logger": "1.1.0",
    "sqlite3": "5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@tsconfig/node14": "1.0.1",
    "@types/c-struct": "0.0.0",
    "@types/chai": "4.2.19",
    "@types/ini": "1.3.30",
    "@types/mocha": "8.2.2",
    "@types/mock-fs": "4.13.0",
    "@types/node": "14.17.4",
    "@types/pg": "8.6.0",
    "@types/sinon": "10.0.2",
    "@types/sqlite3": "3.1.7",
    "@types/supertest": "2.0.11",
    "@types/verror": "1.10.5",
    "chai": "4.3.4",
    "eslint": "7.29.0",
    "eslint-config-xo-space": "0.28.0",
    "eslint-plugin-node": "11.1.0",
    "husky": "7.0.0",
    "jest": "27.0.6",
    "mocha": "8.4.0",
    "mock-fs": "4.14.0",
    "nyc": "15.1.0",
    "sinon": "11.1.1",
    "source-map-support": "0.5.19",
    "supertest": "6.1.3",
    "testdouble": "3.16.1",
    "typescript": "4.3.5",
    "xo": "0.40.3"
  },
  "nyc": {
    "all": true,
    "useSpawnWrap": true,
    "reporter": [
      "text",
      "text-summary",
      "html",
      "cobertura"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "out/*",
      "coverage/*",
      "test/*",
      "dist/*",
      "*/**/*.test.{ts,js}"
    ]
  },
  "xo": {
    "rules": {
      "unicorn/prefer-node-protocol": 0,
      "promise/prefer-await-to-then": 1
    },
    "prettier": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "cache": false,
    "ci": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  }
}
