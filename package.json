{
  "name": "mco-server",
  "version": "1.4.4",
  "description": "a server",
  "main": "src/server.ts",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "prebuild": "rm -rf dist/**",
    "build": "npm run prebuild && tsc",
    "prestart": "npm run build",
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 delete ecosystem.config.js",
    "test": "npm run lint-test",
    "lint-test": "eslint '{services,src}/**/*.ts' --fix && jest --all"
  },
  "author": "Joe Becher <jwbecher@drazisil.com> (drazisil.com)",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "engines": {
    "node": "8.15.1"
  },
  "dependencies": {
    "@types/dotenv-safe": "^5.0.3",
    "@types/express": "^4.17.0",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^12.0.12",
    "@types/pg": "^7.4.14",
    "c-struct": "0.0.5",
    "dotenv-safe": "^6.1.0",
    "express": "^4.17.1",
    "js-yaml": "^3.13.1",
    "minimum-tls-version": "0.0.3",
    "pg": "^7.11.0",
    "sqlite": "^3.0.3",
    "ssl-config": "^1.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.15",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "pm2": "^3.5.1",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "ts-jest": "24.0.2",
    "typescript": "^3.5.2"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/typings/**"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "jest-junit": {
    "output": "test-reports/Jest/junit.xml"
  }
}
