{
  "name": "mco-server",
  "version": "1.2.0",
  "description": "a server",
  "main": "server.js",
  "scripts": {
    "dev": "npm install && npm run tslint && npm build -w",
    "build": "npm run build-ts && npm run tslint",
    "prestart": "npm run build",
    "start": "node dist/src/server.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "pretest": "npm run tslint",
    "test": "jest --all",
    "build-ts": "tsc",
    "licence-check": "license-checker --json > ./data/licenses.json"
  },
  "author": "Joseph W Becher <jwbecher@drazisil.com> (drazisil)",
  "license": "GPL-3.0+",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "lib/**/*.ts"
    ],
    "testResultsProcessor": "jest-junit",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*(spec|test).(ts|tsx|js)$"

  },
  "jest-junit": {
    "output": "test-reports/junit.xml"
  },
  "dependencies": {
    "@types/async": "^2.0.47",
    "@types/dotenv": "^4.0.2",
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/sqlite3": "^3.1.1",
    "arc4": "^3.4.0",
    "async": "^2.5.0",
    "awesome-typescript-loader": "^3.4.1",
    "dotenv": "^5.0.0",
    "hoek": "^5.0.3",
    "require-environment-variables": "^1.1.2",
    "source-map-loader": "^0.2.3",
    "sqlite": "^2.9.1",
    "whocalled": "^1.0.0"
  },
  "devDependencies": {
    "jest": "^22.4.0",
    "jest-junit": "^3.6.0",
    "license-checker": "^16.0.0",
    "pg-migrator": "^1.0.5",
    "prettier": "^1.7.4",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "typescript": "^2.7.2",
    "webpack": "^4.0.0"
  },
  "prettier": {
    "trailingComma": "es5"
  }
}
