{
  "name": "mco-server",
  "version": "1.3.1",
  "description": "a server",
  "main": "src/server.ts",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "docker": "docker-compose up -d",
    "prebuild": "rm -rf disc/**",
    "build": "npm run prebuild && tsc",
    "prestart": "npm run build && npm run docker",
    "start": "pm2 start",
    "test": "npm run lint-test",
    "lint-test": "eslint '{services,src}/**/*.ts' --fix && jest --all",
    "migrate": "npm run docker && pg-migrator postgres://mco@127.0.0.1/mco",
    "postinstall": "rm -rf node_modules/pg-migrator/examples/*"
  },
  "author": "Joe Becher <jwbecher@drazisil.com> (drazisil.com)",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "engines": {
    "node": "8.15.1"
  },
  "dependencies": {
    "@types/dotenv-safe": "^5.0.3",
    "@types/express": "^4.16.1",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^10.14.8",
    "@types/pg": "^7.4.14",
    "async": "^3.0.1",
    "c-struct": "0.0.5",
    "dotenv-safe": "^6.1.0",
    "express": "^4.17.1",
    "js-yaml": "^3.13.1",
    "minimum-tls-version": "0.0.3",
    "pg": "^7.11.0",
    "pg-migrator": "^1.0.5",
    "ssl-config": "^1.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.13",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "prettier-eslint": "^8.8.2",
    "ts-jest": "24.0.2",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1",
    "typescript-eslint-parser": "^22.0.0"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "greenkeeper": {
    "ignore": [
      "@types/node"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint '{services,src}/**/*.ts' --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/typings/**"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "jest-junit": {
    "output": "test-reports/Jest/junit.xml"
  }
}
