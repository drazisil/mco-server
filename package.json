{
  "name": "mco-server",
  "version": "3.0.0-beta1",
  "description": "a server",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "build": "tsc",
    "start": "ts-node app.ts",
    "test": "npm run lint-test",
    "lint": "eslint . --ext js --ext ts",
    "lint-test": "npm run lint && npm run test:only",
    "test:only": "jest",
    "precommit": "npm run lint-test",
    "postinstall": "mkdir -p db"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "dependencies": {
    "@drazisil/mco-logger": "1.2.1",
    "sqlite3": "5.0.2",
    "ts-node": "10.1.0"
  },
  "devDependencies": {
    "@tsconfig/node14": "1.0.1",
    "@types/c-struct": "0.0.0",
    "@types/ini": "1.3.30",
    "@types/node": "14.17.5",
    "@types/pg": "8.6.1",
    "@types/sinon": "10.0.2",
    "@types/sqlite3": "3.1.7",
    "@types/supertest": "2.0.11",
    "@types/verror": "1.10.5",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "@typescript-eslint/parser": "4.28.3",
    "eslint": "7.30.0",
    "eslint-config-xo-space": "0.28.0",
    "eslint-plugin-node": "11.1.0",
    "jest": "27.0.6",
    "nyc": "15.1.0",
    "sinon": "11.1.1",
    "source-map-support": "0.5.19",
    "supertest": "6.1.3",
    "testdouble": "3.16.1",
    "ts-jest": "27.0.3",
    "typescript": "4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "cache": false,
    "ci": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  }
}
