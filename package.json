{
  "name": "mco-server",
  "version": "1.3.0",
  "description": "a server",
  "main": "src/server.js",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "docker": "docker-compose up -d",
    "start": "npm run test && ts-node src/server.ts",
    "start2": "npm run docker && nodemon",
    "test": "npm run lint-test",
    "lint-test": "tslint '{lib,src}/**/*.{ts,tsx}' && jest --all"
  },
  "author": "Joe Becher <jwbecher@drazisil.com> (drazisil.com)",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "engines": {
    "node": ">=8.12.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js|ts}",
      "lib/**/*.{js|ts}"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "jest-junit": {
    "output": "test-reports/junit.xml"
  },
  "dependencies": {
    "@types/dotenv-safe": "^5.0.3",
    "@types/js-yaml": "^3.11.4",
    "@types/node": "^10.12.18",
    "@types/pg": "^7.4.11",
    "async": "^2.6.1",
    "dotenv-safe": "^6.1.0",
    "js-yaml": "^3.12.1",
    "pg": "^7.8.0",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^4.42.0",
    "sequelize-typescript": "^0.6.6",
    "source-map-loader": "^0.2.4",
    "ssl-config": "^1.0.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "jest": "^23.6.0",
    "jest-junit": "^6.0.1",
    "lint-staged": "^8.0.3",
    "nodemon": "^1.18.9",
    "pg-migrator": "^1.0.5",
    "prettier": "^1.15.3",
    "prettier-eslint": "^8.8.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^21.0.2"
  },
  "prettier": {
    "trailingComma": "es5"
  }
}
