{
  "name": "mco-server",
  "version": "1.3.0",
  "description": "a server",
  "main": "src/server.js",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "docker": "docker-compose up -d",
    "start": "npm run docker && nodemon",
    "test": "npm run lint-test",
    "lint-test": "tslint '{lib,src}/**/*.{ts,tsx}' && jest --all",
    "licence-check": "nlf > ./data/licenses.txt"
  },
  "author": "Joe Becher <jwbecher@drazisil.com> (drazisil.com)",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "engines": {
    "node": ">=8.12.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "jest-junit": {
    "output": "test-reports/junit.xml"
  },
  "dependencies": {
    "@types/dotenv-safe": "^5.0.3",
    "@types/js-yaml": "^3.12.0",
    "@types/lodash": "^4.14.123",
    "@types/node": "11.9.0",
    "@types/pg": "^7.4.14",
    "async": "^2.6.2",
    "c-struct": "0.0.5",
    "dotenv-safe": "^6.1.0",
    "js-yaml": "^3.12.2",
    "lodash": "^4.17.11",
    "pg": "^7.9.0",
    "source-map-loader": "^0.2.4",
    "ssl-config": "^1.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "lint-staged": "^8.1.5",
    "nlf": "^2.1.1",
    "nodemon": "^1.18.10",
    "pg-migrator": "^1.0.5",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.4000",
    "typescript-eslint-parser": "^22.0.0"
  },
  "prettier": {
    "trailingComma": "es5"
  }
}
