{
  "name": "mco-server",
  "version": "2.0.1",
  "description": "a server",
  "main": "src/server.ts",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "start": "docker-compose up -d --build",
    "stop": "docker-compose down",
    "test": "npm run lint-test",
    "migrate": "pg-migrator postgres://postgres:mco@localhost/postgres 2",
    "prod": "ts-node src/app.ts | ./node_modules/.bin/bunyan",
    "lint-test": "eslint '{services,src}/**/*.ts' --fix && jest --all --ci --runInBand"
  },
  "author": "Joe Becher <jwbecher@drazisil.com> (drazisil.com)",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "engines": {
    "node": "10.16.0"
  },
  "dependencies": {
    "@types/bunyan": "1.8.6",
    "@types/node": "12.12.8",
    "@types/pg": "7.11.2",
    "@types/statsd-client": "0.4.0",
    "bunyan": "1.8.12",
    "bunyan-gelf": "1.0.0",
    "c-struct": "0.0.5",
    "pg": "7.12.1",
    "pg-migrator": "1.0.5",
    "statsd-client": "0.4.4",
    "ts-node": "8.5.2",
    "winston": "3.2.1",
    "winston-daily-rotate-file": "4.2.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.23",
    "@typescript-eslint/parser": "2.7.0",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.6.0",
    "eslint-plugin-prettier": "3.1.1",
    "jest": "24.9.0",
    "jest-junit": "9.0.0",
    "prettier": "1.19.1",
    "prettier-eslint": "9.0.1",
    "ts-jest": "24.1.0",
    "typescript": "3.6.4"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/typings/**"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "jest-junit": {
    "output": "test-reports/jest/junit.xml"
  }
}
