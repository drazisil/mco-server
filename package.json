{
  "name": "mco-server",
  "version": "3.0.0-beta1",
  "description": "a server",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node app.js",
    "test": "npm run lint-test",
    "migrate": "pg-migrator postgres://postgres:mco@localhost/postgres 2",
    "lint": "eslint --fix \"src/**/*.js\"",
    "lint-test": "npm run lint && nyc mocha",
    "precommit": "npm run lint-test",
    "postinstall": "mkdir db"
  },
  "author": "Joe Becher <jwbecher@drazisil.com> (drazisil.com)",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "dependencies": {
    "c-struct": "0.0.5",
    "sqlite3": "5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@tsconfig/node14": "1.0.1",
    "@types/c-struct": "0.0.0",
    "@types/chai": "4.2.19",
    "@types/ini": "1.3.30",
    "@types/mocha": "8.2.2",
    "@types/mock-fs": "4.13.0",
    "@types/node": "14.17.4",
    "@types/pg": "8.6.0",
    "@types/sinon": "10.0.2",
    "@types/supertest": "2.0.11",
    "@types/verror": "1.10.4",
    "chai": "4.3.4",
    "eslint": "7.29.0",
    "husky": "6.0.0",
    "mocha": "8.4.0",
    "mock-fs": "4.14.0",
    "nyc": "15.1.0",
    "prettier": "2.3.1",
    "sinon": "11.1.1",
    "source-map-support": "0.5.19",
    "supertest": "6.1.3",
    "testdouble": "3.16.1",
    "typescript": "4.3.4"
  },
  "nyc": {
    "all": true,
    "useSpawnWrap": true,
    "reporter": [
      "text",
      "text-summary",
      "html",
      "cobertura"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "out/*",
      "coverage/*",
      "test/*",
      "dist/*",
      "*/**/*.test.{ts,js}"
    ]
  }
}
