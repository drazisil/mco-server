{
  "name": "mco-server",
  "version": "1.3.0",
  "description": "a server",
  "main": "src/server.js",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "scripts": {
    "docker": "docker-compose up -d",
    "start": "npm run docker && nodemon",
    "test": "npm run lint-test",
    "lint-test": "eslint 'src/**/*.ts' && jest --all"
  },
  "author": "Joe Becher <jwbecher@drazisil.com> (drazisil.com)",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "engines": {
    "node": "8.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/typings/**"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "jest-junit": {
    "output": "test-reports/junit.xml"
  },
  "dependencies": {
    "@types/dotenv-safe": "^5.0.3",
    "@types/js-yaml": "^3.12.0",
    "@types/lodash": "^4.14.123",
    "@types/node": "11.9.0",
    "@types/pg": "^7.4.14",
    "async": "^3.0.1",
    "c-struct": "0.0.5",
    "dotenv-safe": "^6.1.0",
    "js-yaml": "^3.13.1",
    "pg": "^7.9.0",
    "ssl-config": "^1.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.13",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.3.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "ts-jest": "24.0.2",
    "ts-node": "^8.0.3",
    "typescript": "^3.5.1",
    "typescript-eslint-parser": "^22.0.0"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "greenkeeper": {
    "ignore": [
      "@types/node"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ]
  }
}
