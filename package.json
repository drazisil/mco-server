{
  "name": "mco-server",
  "version": "1.2.0",
  "description": "a server",
  "main": "server.js",
  "scripts": {
    "dev": "npm install && npm run lint && npm build -w",
    "start": "node built/server.js",
    "test": "jest --all",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'lib/**/*.ts' 'tests/**/*.ts'",
    "build": "tsc",
    "licence-check": "license-checker --json > ./data/licenses.json"
  },
  "author": "Joseph W Becher <jwbecher@drazisil.com> (drazisil)",
  "license": "GPL-3.0+",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mco-server.git"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.js",
      "**/lib/**/*.js"
    ],
    "testResultsProcessor": "jest-junit"
  },
  "jest-junit": {
    "output": "test-reports/junit.xml"
  },
  "dependencies": {
    "@types/async": "^2.0.47",
    "@types/node": "^9.4.0",
    "arc4": "^3.4.0",
    "async": "^2.5.0",
    "awesome-typescript-loader": "^3.4.1",
    "body-parser": "^1.17.0",
    "dotenv": "^5.0.0",
    "express": "^4.15.0",
    "node-rsa": "^0.4.2",
    "require-environment-variables": "^1.1.2",
    "source-map-loader": "^0.2.3",
    "sqlite": "^2.9.1",
    "ssl-config": "^1.0.0",
    "whocalled": "^1.0.0",
    "winston": "^2.2.0",
    "winston-daily-rotate-file": "^1.1.4"
  },
  "devDependencies": {
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.6.0",
    "jest": "^22.0.0",
    "jest-junit": "^3.5.0",
    "license-checker": "^16.0.0",
    "prettier": "^1.7.4",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "webpack": "^3.10.0"
  },
  "eslintConfig": {
    "extends": "prettier",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "trailingComma": "es5"
  }
}
